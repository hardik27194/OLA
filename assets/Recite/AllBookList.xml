<html>
<style>
<!--
.FrameLayout
{
	margin:0
}
-->
</style>
<body id="Main_body" layout="FrameLayout" style="orientation:vertical;">
  <div layout="LinearLayout"  style="orientation:vertical;width:auto;height:auto;weight:1px;background-color:#66CCFF;" >
	<div id="Main_body_menu" layout="LinearLayout"  style="width:auto;align:center;">
			<div layout="LinearLayout"  style="margin:3px;orientation:horizontal;align:center;">
                <button style="width:32px;height:32px;background-image:url($/images/nav/(19).png);valign:middle" onclick="back()"></button>
                <label style="width:auto;valign:middle;color:#ffffff;" onclick="back()">Back</label>
            </div>				
			<label style="weight:1px;height:auto;align:center;valign:middle;">My Profile</label>
			<div id="L_showpop" layout="LinearLayout" style="width:36px;height:36px;align:center;valign:middle;"  onclick="ShowPopupMenu()">
				<button style="width:6px;height:24px;background-image:url($/images/more.png)" onclick="ShowPopupMenu()"/>
			</div>
	</div>            
  	<div id="Main_body_Content" layout="LinearLayout"  style="orientation:vertical;width:auto;height:auto;weight:1px;background-color:#e2e2e2;" >
			<div layout="LinearLayout"  style="width:auto;height:36px;align:center;background-color:#C0C0C0">
					<label id="sys_send_books_lbl" style="height:auto;valign:middle;">Free Books</label>
			</div>            
		<div id="sys_send_books" layout="LinearLayout" style="orientation:vertical;width:auto;margin:15px;">
		</div>            
			<div id="my_books_panle" layout="LinearLayout"  style="width:auto;height:36px;align:center;background-color:#C0C0C0">
					<label style="height:auto;valign:middle;">My Books</label>
			</div>            
		<div id="buyed_books" layout="LinearLayout" style="orientation:vertical;width:auto;margin:15px;">
		</div>            
			<div id="new_books_panle" layout="LinearLayout"  style="width:auto;height:36px;align:center;background-color:#C0C0C0">
					<label style="height:auto;valign:middle;">New Books</label>
			</div>            
		<div id="not_buyed_books" layout="LinearLayout" style="orientation:vertical;width:auto;margin:15px;">
		</div>     

	</div>
	<label id="message_lbl" style="width:auto;height:40px;align:center;valign:middle;background-color:#e2e2e2;"></label>

	<div id="Main_body_menu" layout="LinearLayout" style="width:auto;background-color:#99CCFF">
			<div layout="LinearLayout" style="orientation:vertical;align:center;valign:middle;width:auto;weight:1px;" >
				<button style="width:36px;height:36px;align:center;background-image:url($/images/nav/(145).png)"  onclick="showReviewInfo()" />
				<label style="color:#FFFFFF;" >复习</label>
			</div>
			<div layout="LinearLayout"  style="orientation:vertical;align:center;width:auto;weight:1px;">
                <button style="width:36px;height:36px;background-image:url($/images/nav/(126).png);valign:middle"  onclick="showReading()"/>
				<label style="color:#FFFFFF">阅读</label>
            </div>				
			<div layout="LinearLayout" style="orientation:vertical;align:center;valign:middle;width:auto;weight:1px;background-color:#6699CC;">
				<button style="width:36px;height:36px;background-image:url($/images/nav/(146).png)" onclick="reload()"/>
				<label style="color:#00FF66;">词汇书</label>
			</div>
			<div layout="LinearLayout" style="orientation:vertical;align:center;valign:middle;width:auto;weight:1px;">
				<button style="width:36px;height:36px;background-image:url($/images/nav/(68).png)" onclick="myInfo()" />
				<label style="color:#ffffff">我的</label>
			</div>
	</div>            

</div>
				
</body>
</html>

