<html>
<style>

.line
{
orientation:vertical;width:auto;align:center;margin:5px;
}
.bar
{
height:auto;orientation:horizontal;width:auto;margin:1px;padding:3px;background-color:#ccffff;border:solid 2px #6699cc 5;
}
.lbl_ico
{
width:16px;height:16px;background-image:url($/images/icon/font.png);
}
.lbl_name
{
width:16px;height:16px;width:auto;height:auto;align:left;weight:1px;font:bold 14px Webdings
}
.lbl_right
{
background-image:url($/images/nav/(124).png);
}
label
{
valign:middle;
}
button
{
width:36px;height:36px;align:center;valign:middle;
}
</style>
<body  layout="FrameLayout" style="orientation:vertical;">
  <div style="orientation:vertical;width:auto;height:auto;weight:1px;" >
		<div  style="width:auto;align:center;background-color:#99CCFF">
			<button style="background-image:url($/images/nav/(151).png)"  onclick="reload()" />
            <button style="background-image:url($/images/nav/(12).png);valign:middle" onclick="back2Portal()"></button>
			<label style="weight:1px;height:auto;">OLA Test</label>
			<button style="width:6px;height:24px;background-image:url($/images/more.png)" onclick="ShowPopupMenu()"/>
		</div>            
  	<div  style="orientation:vertical;width:auto;height:auto;weight:1px;" >
  	<div  style="orientation:vertical;width:auto;height:auto;weight:1px;" >
     <div style="width:auto;height:auto;weight:1px;">
	   <scrollview  style="width:auto;height:auto;weight:1px;">
           <div style="orientation:vertical;width:auto;height:auto;weight:1px;">

		   <div class="line">
			   <div class="bar" style="background-color:#e9c2a6;">
					<label class="lbl_ico" />
					<label class="lbl_name" onclick='show("Font")'>字体、字号</label>
				   <button  class="lbl_right"  onclick='showAddLogView(0)'></button>
			   </div>
		   </div>
		   <div class="line">
			   <div class="bar">
					<label class="lbl_ico" />
					<label class="lbl_name" onclick='show("TextField")'>文本框</label>
				   <button  class="lbl_right"  onclick='showAddLogView(0)'></button>
			   </div>
		   </div>
           
           <div class="line">
			   <div class="bar">
                   <label class="lbl_ico" />
                   <label class="lbl_name" onclick='show("Chart")'>Chart</label>
				   <button  class="lbl_right"  onclick='showAddLogView(0)'></button>
			   </div>
		   </div>
       
       </div>
	   </scrollview>
       </div>
	</div>
	</div>
</div>
				
</body>
</html>

