<html>
<style>
<!--
.FrameLayout
{
	margin:0
}
-->
</style>
<body id="Main_body" layout="FrameLayout" style="orientation:vertical;">
  <div layout="LinearLayout" class="LinearLayout" style="orientation:vertical;width:auto;height:auto;weight:1px;background-color:#66CCFF;" >
	<div id="Main_body_menu" layout="LinearLayout" class="LinearLayout" style="width:auto;align:center;background-color:#99CCFF">
			<div id="L_showpop" layout="LinearLayout" style="width:42px;height:36px;align:center;valign:middle;"  onclick="reload()">
				<button style="width:36px;height:36px;align:center;background-image:url(images/nav/(151).png)"  onclick="reload()" />
			</div>
			<div layout="LinearLayout"  style="margin:3px;orientation:horizontal;align:center;">
                <button id="row1" style="width:32px;height:32px;background-image:url(images/nav/(12).png);valign:middle" onclick="back2Portal()"></button>
            </div>				
			<div id="L_reload" layout="LinearLayout" style="weight:1px;height:auto;">
			<label style="weight:1px;height:auto;valign:middle;">Logon</label>
			</div>
			<div id="L_showpop" layout="LinearLayout" style="width:36px;height:36px;align:center;valign:middle;"  onclick="ShowPopupMenu()">
				<button style="width:6px;height:24px;background-image:url(images/more.png)" onclick="ShowPopupMenu()"/>
			</div>
	</div>            
  	<div id="Main_body_Content" layout="LinearLayout" class="LinearLayout" style="orientation:vertical;width:auto;height:auto;valign:middle;weight:1px;" >
			<div layout="LinearLayout" style="orientation:horizontal;valign:middle;width:auto; align:right;">
				<label  style="width:auto;weight:1px;"></label>
				<div layout="LinearLayout" style="orientation:horizontal;width:250px;valign:middle;align:center;">
					<label style="width:40px;height:40px;align:right;background-image:url(images/nav/(68).png);"></label>
					<textfield id="account_txt" style="width:auto;height:35px;weight:1px;align:center;valign:middle;">admin</textfield>
				</div>
				<label  style="width:auto;weight:1px;"></label>
			</div>
			<div layout="LinearLayout" style="orientation:horizontal;valign:middle;width:auto; align:right;">
				<label  style="width:auto;weight:1px;"></label>
				<div layout="LinearLayout" style="orientation:horizontal;width:250px;valign:middle;align:center;">
					<label style="width:40px;height:40px;padding:4px;align:right;background-image:url(images/nav/(34).png);"></label>
					<textfield id="password_txt" style="width:auto;height:35px;weight:1px;align:center;valign:middle;">admin</textfield>
				</div>
				<label  style="width:auto;weight:1px;"></label>
			</div>
			
			<div layout="LinearLayout" style="orientation:horizontal;valign:middle;width:auto; align:right;">
				<label  style="width:auto;weight:1px;"></label>
				<div layout="LinearLayout" style="orientation:horizontal;width:250px;valign:middle;align:center;">
					<label style="width:40px;height:40px;padding:4px;align:right;"></label>
					<textfield id="code_txt" style="width:auto;height:35px;weight:1px;align:center;border-bottom:1px"></textfield>
					<label id="code_lbl" style="width:50px;height:30px;" onclick="refreshCode()"></label>
				</div>
				<label  style="width:auto;weight:1px;"></label>
			</div>


			<div layout="LinearLayout" style="orientation:horizontal;valign:middle;width:auto; align:right;">
				<label  style="width:auto;weight:1px;"></label>
				<div layout="LinearLayout" style="orientation:horizontal;width:250px;valign:middle;align:center;">
					<label style="width:40px;height:40px;padding:4px;align:right;"></label>
					<!--<checkbox style="align:center;valign:middle;">自动登录</checkbox>-->
					<label style="width:auto;weight:1px;"></label>
					<label style="height:25px;align:right;" >忘记密码</label>
				</div>
				<label  style="width:auto;weight:1px;"></label>
			</div>


			<div layout="LinearLayout" style="orientation:horizontal;valign:middle;width:auto; align:right;">
				<label  style="width:auto;weight:1px;"></label>
				<div layout="LinearLayout" style="orientation:horizontal;width:250px;valign:middle;align:center;">
					<label style="width:40px;padding:4px;align:right;"></label>
				<button style="weight:1px;align:center;valign:middle;height:32px;background-image:url(images/btn/41.gif)" onclick="logon()">登  录</button>
				</div>
				<label  style="width:auto;weight:1px;"></label>
			</div>

	</div>
</div>
				
</body>
</html>

