<body id="Main_body" layout="FrameLayout" style="orientation:vertical;">
  <div layout="LinearLayout" class="LinearLayout" style="orientation:vertical;width:auto;height:auto;weight:1px;background-color:#99CCFF;" >
	<div id="Main_body_menu" layout="LinearLayout" class="LinearLayout" style="width:auto;align:center;">
			<div id="L_showpop" layout="LinearLayout" style="width:42px;height:36px;align:center;valign:middle;"  onclick="reload()">
				<button style="width:36px;height:36px;align:center;background-image:url(images/nav/(151).png)"  onclick="reload()" />
			</div>
			<div layout="LinearLayout"  style="margin:3px;orientation:horizontal;align:center;">
                <button id="row1" style="width:32px;height:32px;background-image:url(images/nav/(12).png);valign:middle" onclick="back2Portal()"></button>
            </div>				
			<div id="L_reload" layout="LinearLayout" style="weight:1px;height:auto;">
			<label style="weight:1px;height:auto;valign:middle;">我的通讯录</label>
			</div>
			<div id="L_showpop" layout="LinearLayout" style="width:36px;height:36px;align:center;valign:middle;"  onclick="ShowPopupMenu()">
				<button style="width:6px;height:24px;background-image:url(images/more.png)" onclick="ShowPopupMenu()"/>
			</div>
	</div>            
  	<div id="Main_body_Content" layout="LinearLayout" class="LinearLayout" style="padding:5px;width:auto;height:auto;weight:1px;background-color:#FFFFFF;" >

		<div id="contact_group_panel" layout="LinearLayout" style="orientation:vertical;width:100px;height:auto;align:center;valign:middle;background-color:#EFF1EF"  >
			<label id="row1" style="width:auto;height:30px;text-align:center;">组</label>
			<scrollview style="width:auto;height:auto;align:center;margin:2px;valign:middle;" >
				<TABLE id="contact_group_list_table" style="width:auto;height:auto;">
				</TABLE>
			</scrollview>
		</div>
		<div  layout="LinearLayout" style="orientation:vertical;width:auto;align:center;valign:middle;background-color:#FFFFFF;"  >
				<div id="div3" layout="LinearLayout"  style="orientation:vertical;width:auto;align:center;background-color:#EFF1EF;">
					<TABLE  style="width:auto;height:auto;">
					<TR style="vertical-align:middle">
						<TD><label id="row1" style="width:35px;height:30px;text-align:center;">电话</label></TD>
						<TD><label id="row2" style="width:auto;height:30px;weight:1px;text-align:center" >名称</label></TD>
					</TR>
					</TABLE>
				</div>
				 <scrollview  layout="LinearLayout" style="width:auto;align:center;margin:2px;valign:middle;background-color:#EFF1EF;" >
					<TABLE id="contact_list_table" style="width:auto;height:auto;background-color:#FCECCF;">


					</TABLE>
				  </scrollview>
		</div>
	</div>

	<div id="Main_body_menu" layout="LinearLayout" class="LinearLayout" style="width:auto;align:center;background-color:#99CCFF">
			<div id="L_showpop" layout="LinearLayout" style="width:42px;height:36px;align:center;valign:middle;"  onclick="readContacts()">
				<button style="width:36px;height:36px;align:center;background-image:url(images/nav/(94).png)"  onclick="readContacts()" ></button>
			</div>
			<div id="L_showpop" layout="LinearLayout" style="width:36px;height:36px;align:center;valign:middle;"  onclick="ShowPopupMenu()">
				<button style="width:36px;height:36px;background-image:url(images/nav/(176).png)" onclick="YellowPages()"/>
			</div>
	</div>            

</div>
				
</body>
</html>

